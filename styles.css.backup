/* Reset & Base */
* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: "Roboto", "Inter", "Noto Sans KR", Arial, sans-serif;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  color: #222;
  min-height: 100vh;
}

/* MDL Layout Overrides */
.mdl-layout {
  background: transparent;
}

.mdl-layout__header {
  background: linear-gradient(90deg, #6c63ff 60%, #5ad1e6 100%);
  box-shadow: 0 2px 8px rgba(108, 99, 255, 0.15);
}

.mdl-layout__content {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: calc(100vh - 64px);
  padding: 20px;
}

/* Main App Container */
#app {
  max-width: 900px;
  width: 100%;
  background: #fff;
  border-radius: 22px;
  box-shadow: 0 8px 32px rgba(60, 60, 120, 0.13),
    0 1.5px 6px rgba(90, 209, 230, 0.07);
  padding: 32px;
  min-height: 70vh;
}

/* Auth Section Styling */
#auth-section {
  max-width: 430px;
  margin: 0 auto;
}

.mdl-tabs__tab-bar {
  background: transparent;
  border-bottom: 2px solid #e0e0e0;
}

.mdl-tabs__tab {
  color: #666;
  font-weight: 500;
  padding: 16px 24px;
}

.mdl-tabs__tab.is-active {
  color: #6c63ff;
  border-bottom: 2px solid #6c63ff;
}

.mdl-tabs__panel {
  padding: 24px 0;
}

/* Input Field Enhancements */
.mdl-textfield {
  width: 100%;
}

.mdl-textfield__input {
  border-bottom: 2px solid #e0e0e0;
  font-size: 16px;
  padding: 12px 0;
}

.mdl-textfield__input:focus {
  border-bottom: 2px solid #6c63ff;
}

.mdl-textfield__label {
  color: #666;
  font-size: 16px;
}

.mdl-textfield__label.is-focused {
  color: #6c63ff;
}

/* Button Styling */
.mdl-button--raised {
  background: linear-gradient(90deg, #6c63ff 60%, #5ad1e6 100%);
  color: #fff;
  font-weight: 600;
  box-shadow: 0 2px 8px rgba(108, 99, 255, 0.15);
  transition: all 0.2s ease;
}

.mdl-button--raised:hover {
  background: linear-gradient(90deg, #5ad1e6 0%, #6c63ff 100%);
  box-shadow: 0 4px 16px rgba(90, 209, 230, 0.25);
  transform: translateY(-1px);
}

/* TODO App Visibility */
.todo-app-hidden {
  display: none;
}

.todo-app-visible {
  display: block;
}

/* TODO Card */
.todo-card {
  width: 100%;
  min-height: 400px;
}

.todo-card .mdl-card__title {
  background: linear-gradient(135deg, #6c63ff 0%, #5ad1e6 100%);
  color: white;
}

.todo-card .mdl-card__title-text {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
}

/* Filter Tabs */
.filter-tabs {
  display: flex;
  gap: 8px;
  margin-bottom: 20px;
  flex-wrap: wrap;
}

.filter-btn {
  flex: 1;
  min-width: 120px;
}

.filter-btn.active {
  background: #6c63ff !important;
  color: white !important;
}

/* TODO Form */
.todo-form {
  margin-bottom: 20px;
  align-items: flex-end;
}

.date-field input[type="date"] {
  min-width: 120px;
}

.priority-field select {
  background: transparent;
  border: none;
  border-bottom: 2px solid #e0e0e0;
  padding: 8px 0;
  font-size: 16px;
  color: #333;
}

.priority-field select:focus {
  border-bottom: 2px solid #6c63ff;
  outline: none;
}

.add-button-cell {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-bottom: 8px;
}

.mdl-button--fab.mdl-button--mini-fab {
  background: #6c63ff;
  box-shadow: 0 2px 8px rgba(108, 99, 255, 0.25);
}

.mdl-button--fab.mdl-button--mini-fab:hover {
  background: #5a54d9;
  transform: scale(1.05);
}

/* TODO List */
.todo-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.todo-item {
  display: flex;
  align-items: center;
  background: #f8fafc;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(90, 209, 230, 0.08);
  transition: all 0.2s ease;
  border-left: 4px solid transparent;
}

.todo-item:hover {
  background: #e9f3ff;
  box-shadow: 0 4px 16px rgba(90, 209, 230, 0.15);
  transform: translateY(-1px);
}

.todo-item.priority-높음 {
  border-left-color: #ff4757;
}

.todo-item.priority-중간 {
  border-left-color: #ffa502;
}

.todo-item.priority-낮음 {
  border-left-color: #2ed573;
}

.todo-checkbox {
  accent-color: #6c63ff;
  width: 20px;
  height: 20px;
  margin-right: 16px;
  cursor: pointer;
}

.todo-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.todo-text {
  font-size: 1.1rem;
  color: #333;
  margin: 0;
  word-break: break-word;
  transition: all 0.2s ease;
}

.todo-text.completed {
  color: #999;
  text-decoration: line-through;
}

.todo-meta {
  display: flex;
  gap: 12px;
  font-size: 0.9rem;
  color: #666;
  flex-wrap: wrap;
}

.todo-due {
  background: #e3f2fd;
  color: #1976d2;
  padding: 2px 8px;
  border-radius: 12px;
}

.todo-due.overdue {
  background: #ffebee;
  color: #d32f2f;
}

.todo-priority {
  padding: 2px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.todo-priority.priority-높음 {
  background: #ffebee;
  color: #d32f2f;
}

.todo-priority.priority-중간 {
  background: #fff3e0;
  color: #f57c00;
}

.todo-priority.priority-낮음 {
  background: #e8f5e8;
  color: #388e3c;
}

.todo-delete {
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.2s ease;
  margin-left: 12px;
}

.todo-delete:hover {
  background: #ff3742;
  transform: scale(1.05);
}

/* Special Todo Item States */
.empty-item,
.error-item,
.loading-item {
  justify-content: center;
  text-align: center;
  font-style: italic;
  color: #666;
  background: #f0f0f0;
  border: 2px dashed #ccc;
}

.error-item {
  color: #d32f2f;
  background: #ffebee;
  border-color: #ffcdd2;
}

.loading-item {
  color: #6c63ff;
  background: #e8eaf6;
  border-color: #c5cae9;
}

/* 반응형 디자인 */
@media (max-width: 840px) {
  .mdl-layout__content {
    padding: 16px;
  }

  #app {
    padding: 24px;
    border-radius: 16px;
  }

  .todo-form {
    flex-direction: column;
  }

  .todo-form .mdl-cell {
    width: 100% !important;
    margin: 0 0 16px 0;
  }

  .add-button-cell {
    align-items: center;
    padding-bottom: 0;
  }

  .filter-tabs {
    justify-content: center;
  }

  .filter-btn {
    min-width: 100px;
  }
}

@media (max-width: 600px) {
  .mdl-layout__header {
    height: 56px;
  }

  .mdl-layout__content {
    min-height: calc(100vh - 56px);
    padding: 12px;
  }

  #app {
    padding: 20px;
    border-radius: 12px;
    min-height: 0;
  }

  .mdl-card__title-text {
    font-size: 1.3rem;
  }

  .mdl-tabs__tab {
    padding: 12px 16px;
    font-size: 14px;
  }

  .todo-item {
    padding: 12px;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .todo-content {
    width: 100%;
  }

  .todo-text {
    font-size: 1rem;
  }

  .todo-meta {
    justify-content: flex-start;
    width: 100%;
  }

  .todo-delete {
    align-self: flex-end;
    margin: 8px 0 0 0;
  }

  .filter-tabs {
    flex-direction: column;
    gap: 8px;
  }

  .filter-btn {
    width: 100%;
    min-width: auto;
  }
}

@media (max-width: 480px) {
  .mdl-layout__content {
    padding: 8px;
  }

  #app {
    padding: 16px;
    border-radius: 8px;
  }

  .mdl-textfield__input {
    font-size: 16px;
    /* Prevents zoom on iOS */
  }

  .todo-checkbox {
    width: 18px;
    height: 18px;
  }

  .todo-text {
    font-size: 0.95rem;
  }

  .todo-meta {
    font-size: 0.8rem;
  }

  .todo-due,
  .todo-priority {
    padding: 1px 6px;
    font-size: 0.8rem;
  }
}

/* Performance Optimizations */
* {
  will-change: auto;
}

.mdl-button,
.todo-item,
.filter-btn {
  will-change: transform, box-shadow;
}

/* Focus and Accessibility */
.mdl-button:focus,
.mdl-textfield__input:focus,
.todo-checkbox:focus,
.todo-delete:focus {
  outline: 2px solid #6c63ff;
  outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .todo-item {
    border: 2px solid #333;
  }

  .mdl-button--raised {
    border: 2px solid #000;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}